<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>view_hotels.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
    <servlet-name>GroupCustomerServlet</servlet-name>
    <servlet-class>controller.GroupCustomerServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>GroupCustomerServlet</servlet-name>
        <url-pattern>/groupCustomers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RoomToGroupingServlet</servlet-name>
        <servlet-class>controller.RoomToGroupingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomToGroupingServlet</servlet-name>
        <url-pattern>/roomsToCustomers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAllRoomsServlet</servlet-name>
        <servlet-class>controller.GetAllRoomsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllRoomsServlet</servlet-name>
        <url-pattern>/getAllRooms</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RoomRegistrationServlet</servlet-name>
        <servlet-class>controller.RoomRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomRegistrationServlet</servlet-name>
        <url-pattern>/submitRoom</url-pattern>
    </servlet-mapping>
</web-app>