<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>controller.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>GroupCustomerServlet</servlet-name>
    <servlet-class>controller.GroupCustomerServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>GroupCustomerServlet</servlet-name>
        <url-pattern>/groupCustomers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewReservationServlet</servlet-name>
        <servlet-class>controller.NewReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewReservationServlet</servlet-name>
        <url-pattern>/newReservation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>controller.ErrorHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/ErrorHandler</url-pattern>
    </servlet-mapping>
</web-app>